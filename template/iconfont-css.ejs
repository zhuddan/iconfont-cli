.iconfont {
  --icon-size: 1em;
  --icon-color: currentcolor;
  display: inline-block;
  mask-repeat: no-repeat;
  -webkit-mask-repeat: no-repeat;
  width: var(--icon-size);
  height: var(--icon-size);
  -webkit-mask-size: var(--icon-size);
  mask-size: var(--icon-size);
  background-color: var(--icon-color);
}

